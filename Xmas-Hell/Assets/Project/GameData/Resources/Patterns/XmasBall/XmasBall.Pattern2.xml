<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "bulletml.dtd">
<bulletml>
  <action label="top">
    <repeat>
      <times>50</times>
      <action>
        <fire>
          <bullet>
            <direction type="sequence">82</direction>
            <speed type="absolute">10</speed>
            <sprite>5</sprite>
            <color>
              <red>0.78</red>
              <green>0</green>
              <blue>0</blue>
            </color>
            <action>
              <changeSpeed>
                <speed>1</speed>
                <term>300</term>
              </changeSpeed>
            </action>
          </bullet>
        </fire>
        <wait>2</wait>
      </action>
    </repeat>
  </action>
</bulletml>